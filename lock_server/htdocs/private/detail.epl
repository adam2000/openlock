	$admin = ($fdat{admin} ? 1 : 'NULL');
	$q_group = $ls->quote($fdat{group});

	# ugly hack here...
	$tech_group = ($fdat{tech_group} ? 1 : 'NULL');
	
	$q_username = $ls->quote($fdat{username});
